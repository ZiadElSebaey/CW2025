<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>

<StackPane xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.comp2042.ui.LevelsController"
      fx:id="rootPane">
    <VBox alignment="CENTER" spacing="25">
        <Label text="LEVELS" styleClass="menu-title"/>
        <GridPane fx:id="levelsGrid" alignment="CENTER"/>
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="resetButton" text="Reset Progress" styleClass="menu-button"/>
            <Button fx:id="backButton" text="Back to Main Menu" styleClass="menu-button"/>
        </HBox>
    </VBox>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>

