        <Label text="TETRIS" styleClass="menu-title"/>
        <VBox alignment="CENTER" spacing="15">
            <Button text="Free Play" styleClass="menu-button" onAction="#onPlayClicked"/>
            <Button text="Levels" styleClass="menu-button" onAction="#onLevelsClicked"/>
            <Button text="Gamemodes" styleClass="menu-button" onAction="#onGamemodesClicked"/>
            <Button fx:id="resumeButton" text="Resume Game" styleClass="menu-button" onAction="#onResumeClicked"/>
            <Button text="How To Play" styleClass="menu-button" onAction="#onHowToPlayClicked"/>
            <Button text="Quit" styleClass="menu-button" onAction="#onQuitClicked"/>
        </VBox>
    </VBox>
    <Pane pickOnBounds="false">
        <VBox fx:id="creatorPanel" alignment="CENTER" spacing="5" layoutX="550" layoutY="400">
            <ImageView fx:id="creatorImage" fitWidth="220" fitHeight="220" preserveRatio="true">
                <image><Image url="@AlexeyPajitnov.png"/></image>
            </ImageView>
            <Label text="Alexey Pajitnov" styleClass="creator-name"/>
            <Label text="Creator of Tetris" styleClass="creator-title"/>
        </VBox>
