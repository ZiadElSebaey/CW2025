        <Button fx:id="backButton" text="â†" styleClass="back-icon" onAction="#onPlayMenuBackClicked" layoutX="15" layoutY="15" visible="false" managed="false"/>
    </Pane>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>

