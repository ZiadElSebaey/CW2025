<StackPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.comp2042.ui.MainMenuController">
    <VBox alignment="CENTER" spacing="40" pickOnBounds="false">
        <Label fx:id="titleLabel" text="TETRIS" styleClass="menu-title"/>
        <VBox alignment="CENTER" spacing="15">
            <Button fx:id="playButton" text="Play" styleClass="menu-button" onAction="#onPlayMenuClicked"/>
            <HBox fx:id="playSubmenu" alignment="CENTER" spacing="30" visible="false" managed="false">
                <VBox alignment="CENTER" spacing="15" styleClass="play-option-panel" onMouseClicked="#onPlayClicked">
                    <Label text="FREE PLAY" styleClass="play-option-title"/>
                    <Label text="Play without limits" styleClass="play-option-subtitle" wrapText="true"/>
                </VBox>
                <VBox alignment="CENTER" spacing="15" styleClass="play-option-panel" onMouseClicked="#onLevelsClicked">
                    <Label text="LEVELS" styleClass="play-option-title"/>
                    <Label text="Complete challenges" styleClass="play-option-subtitle" wrapText="true"/>
                </VBox>
                <VBox alignment="CENTER" spacing="15" styleClass="play-option-panel" onMouseClicked="#onGamemodesClicked">
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Game" styleClass="play-option-title"/>
                        <Label text="Modes" styleClass="play-option-title"/>
                    </VBox>
                    <Label text="Try new modes" styleClass="play-option-subtitle" wrapText="true"/>
                </VBox>
            </HBox>
            <VBox fx:id="otherButtons" alignment="CENTER" spacing="15">
                <Button fx:id="resumeButton" text="Resume Game" styleClass="menu-button" onAction="#onResumeClicked"/>
                <Button text="How To Play" styleClass="menu-button" onAction="#onHowToPlayClicked"/>
                <Button text="Quit" styleClass="menu-button" onAction="#onQuitClicked"/>
            </VBox>
        </VBox>
    </VBox>
    <Pane pickOnBounds="false">
        <VBox fx:id="creatorPanel" alignment="CENTER" spacing="5" layoutX="550" layoutY="400">
            <ImageView fx:id="creatorImage" fitWidth="220" fitHeight="220" preserveRatio="true">
                <image><Image url="@AlexeyPajitnov.png"/></image>
            </ImageView>
            <Label text="Alexey Pajitnov" styleClass="creator-name"/>
        </VBox>
