<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>

<StackPane xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.comp2042.ui.GamemodesController"
      fx:id="rootPane" pickOnBounds="false">
    <VBox alignment="CENTER" spacing="50" pickOnBounds="false">
        <Label text="GAMEMODES" styleClass="gamemodes-title"/>
        <HBox alignment="CENTER" spacing="40" pickOnBounds="false">
            <VBox fx:id="nineteenEightyFourPanel" alignment="CENTER" spacing="20" styleClass="gamemode-panel" onMouseClicked="#on1984Clicked">
                <Label text="1984" styleClass="gamemode-title"/>
                <Label text="Back to the first day" styleClass="gamemode-subtitle" wrapText="true"/>
            </VBox>
            <VBox fx:id="invertedPanel" alignment="CENTER" spacing="20" styleClass="gamemode-panel" onMouseClicked="#onInvertedClicked">
                <Label text="INVERTED" styleClass="gamemode-title" wrapText="false"/>
                <Label text="Every move is reversed" styleClass="gamemode-subtitle" wrapText="true"/>
            </VBox>
        </HBox>
    </VBox>
    <Pane pickOnBounds="false">
        <Button fx:id="backButton" text="â†" styleClass="back-icon" onAction="#onBackClicked" layoutX="15" layoutY="15"/>
    </Pane>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>

