<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>

<StackPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.comp2042.ui.HowToPlayController">
<VBox alignment="CENTER" spacing="30">

    <Label text="How To Play" styleClass="section-title"/>

    <VBox alignment="CENTER" spacing="12" styleClass="controls-box">
        <HBox spacing="20" alignment="CENTER">
            <Label text="Move Left:" styleClass="control-label" prefWidth="120"/>
            <Label text="← or A" styleClass="control-key"/>
        </HBox>
        <HBox spacing="20" alignment="CENTER">
            <Label text="Move Right:" styleClass="control-label" prefWidth="120"/>
            <Label text="→ or D" styleClass="control-key"/>
        </HBox>
        <HBox spacing="20" alignment="CENTER">
            <Label text="Rotate:" styleClass="control-label" prefWidth="120"/>
            <Label text="↑ or W" styleClass="control-key"/>
        </HBox>
        <HBox spacing="20" alignment="CENTER">
            <Label text="Soft Drop:" styleClass="control-label" prefWidth="120"/>
            <Label text="↓ or S" styleClass="control-key"/>
        </HBox>
        <HBox spacing="20" alignment="CENTER">
            <Label text="Pause:" styleClass="control-label" prefWidth="120"/>
            <Label text="P" styleClass="control-key"/>
        </HBox>
        <HBox spacing="20" alignment="CENTER">
            <Label text="New Game:" styleClass="control-label" prefWidth="120"/>
            <Label text="N" styleClass="control-key"/>
        </HBox>
    </VBox>

    <Button text="Back" styleClass="menu-button" onAction="#onBackClicked" prefWidth="200"/>
    </VBox>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>

