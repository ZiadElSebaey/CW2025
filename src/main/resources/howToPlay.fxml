<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>

<StackPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.comp2042.ui.HowToPlayController">
    <ImageView fitWidth="720" fitHeight="680" preserveRatio="false" pickOnBounds="true" mouseTransparent="true">
        <image><Image url="@Electronika-60.png"/></image>
    </ImageView>
    <HBox alignment="CENTER" spacing="-35" layoutX="200" translateY="-112" mouseTransparent="false" pickOnBounds="false">
        <VBox fx:id="basicControlsContainer" alignment="CENTER" spacing="2" prefWidth="170">
            <Label text="Basic Controls" style="-fx-font-family: 'Frozenland'; -fx-font-size: 14px; -fx-text-fill: yellow; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(255, 255, 0, 0.5), 5, 0.3, 0, 0);"/>
            <HBox spacing="4" alignment="CENTER">
                <Label text="Move Left:" styleClass="control-label" prefWidth="85"/>
                <Label text="← or A" styleClass="control-key"/>
            </HBox>
            <HBox spacing="4" alignment="CENTER">
                <Label text="Move Right:" styleClass="control-label" prefWidth="85"/>
                <Label text="→ or D" styleClass="control-key"/>
            </HBox>
            <HBox spacing="4" alignment="CENTER">
                <Label text="Rotate:" styleClass="control-label" prefWidth="85"/>
                <Label text="↑ or W" styleClass="control-key"/>
            </HBox>
            <HBox spacing="4" alignment="CENTER">
                <Label text="Soft Drop:" styleClass="control-label" prefWidth="85"/>
                <Label text="↓ or S" styleClass="control-key"/>
            </HBox>
            <HBox spacing="4" alignment="CENTER">
                <Label text="Hard Drop:" styleClass="control-label" prefWidth="85"/>
                <Label text="SPACE" styleClass="control-key"/>
            </HBox>
            <HBox spacing="4" alignment="CENTER">
                <Label text="Hold Block:" styleClass="control-label" prefWidth="85"/>
                <Label text="H" styleClass="control-key"/>
            </HBox>
        </VBox>

        <VBox fx:id="gameControlsContainer" alignment="CENTER" spacing="2" prefWidth="170" visible="false" managed="false">
            <Label text="Game Controls" style="-fx-font-family: 'Frozenland'; -fx-font-size: 14px; -fx-text-fill: yellow; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(255, 255, 0, 0.5), 5, 0.3, 0, 0);"/>
            <HBox spacing="2" alignment="CENTER">
                <Label text="Pause:" styleClass="control-label" prefWidth="70"/>
                <Label text="ESC" styleClass="control-key"/>
            </HBox>
            <HBox spacing="3" alignment="CENTER">
                <Label text="Restart:" styleClass="control-label" prefWidth="85"/>
                <Label text="N" styleClass="control-key"/>
            </HBox>
        </VBox>
    </HBox>
    <Label fx:id="basicControlsArrow" text="▶" translateX="175" translateY="-160" style="-fx-font-family: 'Frozenland'; -fx-font-size: 80px; -fx-text-fill: #FFD700; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(255, 215, 0, 0.8), 10, 0.5, 0, 0);"/>
    <Button fx:id="nextPageButton" text="▶" styleClass="arrow-button-golden" translateX="170" translateY="-190" onAction="#onNextPage" visible="true" managed="true" mouseTransparent="false" pickOnBounds="true"/>
    <Button fx:id="backButton" text="" styleClass="back-button-black" translateX="-180" translateY="40" onAction="#onBackClicked" visible="true" managed="true"/>
    <StackPane fx:id="dialogueContainer" alignment="CENTER" translateX="260" translateY="110" style="-fx-background-color: transparent;">
        <ImageView fx:id="dialogueImage" fitWidth="350" fitHeight="120" preserveRatio="true">
            <image><Image url="@Dialogue.png"/></image>
        </ImageView>
        <VBox alignment="CENTER" spacing="5">
            <Label fx:id="dialogueText" text="On this very machine, I taught the blocks how to move. Now I'll teach you." 
                   wrapText="true" maxWidth="200" alignment="CENTER" textAlignment="CENTER" 
                   style="-fx-background-color: transparent; -fx-text-fill: #FFD700; -fx-font-family: 'Frozenland'; -fx-font-size: 18px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(255, 215, 0, 0.8), 3, 0.5, 0, 0);"/>
        </VBox>
    </StackPane>
    <VBox fx:id="creatorPanel" alignment="CENTER" spacing="5" translateX="260" translateY="240">
        <ImageView fx:id="creatorImage" fitWidth="160" fitHeight="160" preserveRatio="true">
            <image><Image url="@AlexeyPajitnov.png"/></image>
        </ImageView>
        <Label text="Alexey Pajitnov" styleClass="creator-name"/>
    </VBox>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>

